<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Restaurant</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <style type="text/css">
      .well {
          background: none;
          height: 320px;
      }
    
      .table-scroll tbody {
          position: absolute;
          overflow-y: scroll;
          height: 250px;
      }
    
      .table-scroll tr {
          width: 100%;
          table-layout: fixed;
          display: inline-table;
      }
    
      .table-scroll thead > tr > th {
          border: none;
      }
    </style>
  </head>
  <body data-new-gr-s-s-check-loaded="14.984.0" data-gr-ext-installed>

    <div class="jumbotron text-center container=fluid">
      <h1>Restaurants</h1>  
        <p>User : <%= name %></p>
	<p>Showing <%= nRestaurants %> documents</p>
    </div>

    <div class="container-fluid">
      <div class="row">
        <a href="/new">
          <button class="btn btn-default">Create New Restaurant</button>
        </a>
        <a href="/search">
          <button class="btn btn-default">Search</button>
        </a>
        <a href="/logout">
          <button class="btn btn-default">Logout</button>
        </a>
       
    </div>

      <div class="row">
        <table class="table table-striped table-bordered table-hover table-scroll">
          <thead>
            <tr>
              <th>Restaurants Name</th>
            </tr>
          </thead>
          <tbody>
            <tr>
	      <% for (var r of restaurants) { %>
	      <tr>
	        <td class="">
	        <a href="/details?_id=<%= r._id %>"><%= r.name %></a>
	        </td>
	      </tr>
	      <% } %>
	    </tr>
          </tbody>
          
        </table>
      </div>
    </div>
    
  </body>

</html>
